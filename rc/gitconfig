[alias]
  aa = add --all
  br = branch
  ci = commit
  co = checkout
  df = diff
  l = "!source ~/.githelpers && pretty_git_log"
  st = status -sb
  unstage = reset HEAD
  up = pull

[branch]
  autosetuprebase = always

[color]
  branch = auto
  diff = auto
  status = auto
  ui = true

[core]
  editor = vim
  excludesfile = ~/.global_gitignore
  pager = "less -FRXM+Gg"
  whitespace=-indent-with-non-tab,trailing-space,cr-at-eol

[credential]
  helper = osxkeychain

[diff]
  renames = copies

[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)

[fetch]
	prune = true

[filter "media"]
  clean = git media clean %f
  required = true
  smudge = git media smudge %f

[filter "lfs"]
	clean = git-lfs clean -- %f
  required = true
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[help]
  autocorrect = 5

[merge]
  tool = opendiff

[mergetool]
  keepBackup = false

[push]
  default = upstream

[url "git@github.com:"]
  insteadOf = gh:

[url "git@heroku.com:"]
  insteadOf = heroku:

[commit]
  gpgsign = true
