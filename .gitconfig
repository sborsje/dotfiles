[user]
  name = Stefan Borsje
  email = mail@sborsje.nl
  helper = osxkeychain

[core]
  editor = vim
  excludesfile = ~/.dotfiles/.global_gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  pager = "less -FRXM+Gg"

[alias]
  co = checkout
  st = status -sb
  ci = commit
  up = pull
  br = branch
  df = diff
  aa = add --all
  l = "!source ~/.githelpers && pretty_git_log"
  unstage = reset HEAD

[color]
  ui = true
  diff = auto
  status = auto
  branch = auto

[help]
  autocorrect = 5

[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)

[push]
  default = upstream

[branch]
  autosetuprebase = always

[merge]
  tool = opendiff

[url "git@heroku.com:"]
  insteadOf = heroku:

[url "git://github.com/"]
  # Read-only
  insteadOf = gh:

[url "git@github.com:"]
  # With write access
  insteadOf = wgh:

[web]
  browser = open
[mergetool]
	keepBackup = false
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
